datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Affiliation {
  id        Int        @id @default(autoincrement())
  name      String
  characters Character[]
}

model StarSystem {
  id        Int        @id @default(autoincrement())
  name      String
  description String
  planets   Planet[]
}

model Planet {
  id        Int        @id @default(autoincrement())
  name      String
  climate   String
  terrain   String
  starSystemId Int
  starSystem   StarSystem @relation(fields: [starSystemId], references: [id])
  characters   Character[]
}

model Spaceship {
  id                Int    @id @default(autoincrement())
  name              String
  model             String
  manufacturer      String
  passengerCapacity Int
}

model Character {
  id           Int      @id @default(autoincrement())
  name         String
  species      String
  affiliationId Int
  homePlanetId Int
  affiliation  Affiliation @relation(fields: [affiliationId], references: [id])
  homePlanet   Planet    @relation(fields: [homePlanetId], references: [id])
}